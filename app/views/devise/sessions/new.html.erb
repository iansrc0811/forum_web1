<h2 align='center'>Log in</h2>
<dev class='center'>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { class: "form-horizontal",role: "form" }) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :email %><br/>
      </div>
      <div class="col-sm-8">
        <%= f.email_field :email, class: "form-control", placeholder: "e-mail", autofocus: true %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :password %><br/>
      </div>
      <div class="col-sm-8">
        <%= f.password_field :password, class: "form-control", placeholder: "密碼" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>

</dev>
